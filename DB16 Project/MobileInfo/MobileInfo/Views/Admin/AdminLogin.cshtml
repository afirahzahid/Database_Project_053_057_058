@model MobileInfo.Models.Administrator

@{
	ViewBag.Title = "AdminLogin";
}


<table class="table">

	
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
        <div class="container-login100" >
		<div class="wrap-login100" >
            <div class="login100-form-title" style="background-image: url(/images/bg-01.jpg);">
                <span class="login100-form-title-1">
                    Admin Login
                </span>
            </div>
            <br />
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group" style="color: white;  font-size: 22px ;margin-left: 180px; margin-right: auto; width: 7em">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size:20px;color:rgb(128,128,128)" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", style = "width: 260px ; height:30px" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="color: white;  font-size: 22px ;margin-left: 180px; margin-right: auto; width: 7em">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size:20px;color:rgb(128,128,128)" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", style = "width: 260px ; height:30px" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="container-login100-form-btn" style="padding-left:35%">
                    <button class="login100-form-btn" >
                        <input type="submit" value="Login" class="login100-form-btn" />
                    </button>
                    <br />
                </div>
                <br />
            </div>
		</div>
            <br />
</div>

	}
    <br />
    <br />
    <br />

	@Html.Raw(TempData["msg"])

</table>
<br />
<br />