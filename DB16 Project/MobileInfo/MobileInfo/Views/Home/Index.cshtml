@model IEnumerable<MobileInfo.Models.Brand>

@{
    ViewBag.Title = "Index";
}






<div class="container">

    @foreach (var item in Model)
    {
        <div class="col-md-2" style="margin-bottom:25px; margin-right:87px">
            <div>
                <div class="Images">
                    <a href="@Url.Action("BrandMobiles", "Home", new { id = item.Id })">
                        <img src="@Url.Content(item.Image)" style="vertical-align: middle; width: 150px; height:150px">
                    </a>

                </div>
                <div class="caption" >
                    <h4> @Html.ActionLink(@item.Name, "BrandMobiles", new { id = item.Id }) </h4>
                </div>
            </div>
        </div>
    }
</div>

