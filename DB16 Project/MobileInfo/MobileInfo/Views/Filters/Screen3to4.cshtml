@model IEnumerable<MobileInfo.Models.Mobile>

@{
    ViewBag.Title = "BrandMobiles";
}


<div class="container">

    @foreach (var item in Model)
    {
        if (Convert.ToDouble(item.Size.Split(' ').First()) >=3.0 && Convert.ToDouble(item.Size.Split(' ').First()) <= 3.9)
        {
            <div class="col-md-2" style="margin-bottom:25px; margin-right:87px">
                <div class="thumbnail">
                    <div class="Images">
                        <img src="@Url.Content(item.Picture)" height="150" width="150" />
                    </div>
                    <div class="caption" style=" border-top: 3px solid">
                        <h4> @Html.ActionLink(@item.Name, "MobileDetails", new { id = item.Id }) </h4>
                        <h5> @item.Price</h5>
                    </div>
                </div>
            </div>
        }
    }
</div>

